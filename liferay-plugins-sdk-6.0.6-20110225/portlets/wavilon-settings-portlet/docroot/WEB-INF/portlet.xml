<?xml version="1.0"?>

<portlet-app
        version="2.0"
        xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
        >
    <portlet id="wavilon-settings">
        <portlet-name>wavilon-settings</portlet-name>
        <display-name>Wavilon Settings</display-name>
        <portlet-class>com.vaadin.terminal.gwt.server.ApplicationPortlet2</portlet-class>

        <init-param>
            <name>application</name>
            <value>com.aimprosoft.wavilon.application.SettingsApplication</value>
        </init-param>

        <expiration-cache>0</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
        </supports>

        <portlet-info>
            <title>Wavilon Settings</title>
            <short-title>Wavilon Settings</short-title>
            <keywords>wavilon,settings,portlet</keywords>
        </portlet-info>

        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>

        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>

        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>

        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>

    <portlet id="wavilon-activity">
        <portlet-name>wavilon-activity</portlet-name>
        <display-name>Wavilon Activity</display-name>
        <portlet-class>com.vaadin.terminal.gwt.server.ApplicationPortlet2</portlet-class>

        <init-param>
            <name>application</name>
            <value>com.aimprosoft.wavilon.application.ActivityApplication</value>
        </init-param>

        <expiration-cache>0</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
        </supports>

        <portlet-info>
            <title>Wavilon Activity</title>
            <short-title>Wavilon Activity</short-title>
            <keywords>wavilon,activity,portlet</keywords>
        </portlet-info>

        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>

        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>

        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>

        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>
</portlet-app>